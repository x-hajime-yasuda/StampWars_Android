<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:start="8dp"
        android:end="8dp"
        android:top="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle" android:tint="@color/primary_20">
            <size android:width="40dp" android:height="30dp"></size>
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item
        android:width="30dp"
        android:height="20dp"
        android:gravity="center">
        <bitmap android:src="@drawable/chevron_double_right"
            android:tint="@color/white"></bitmap>
    </item>
</layer-list>